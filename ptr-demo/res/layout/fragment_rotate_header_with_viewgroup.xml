<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cube_demo_white">

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/fragment_rotate_header_with_view_group_frame"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f1"
        android:padding="10dp"
        app:ptr_content="@+id/fragment_rotate_header_with_view_group_content">

        <FrameLayout
            android:id="@+id/fragment_rotate_header_with_view_group_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cube_holo_green_light">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cube_holo_blue_dark"
                android:clickable="true"
                android:gravity="center"
                android:text="I am a TextView in FrameLayout"
                android:textColor="@color/cube_demo_black"
                android:textSize="30sp" />

        </FrameLayout>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
</RelativeLayout>